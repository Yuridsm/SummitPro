{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "wwwroot/dist/js",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "include": [
        "Scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
